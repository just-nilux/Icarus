BROKER:
    Broker section only used in TEST mode.

STRATEGY:
    enter:
        - limit
        - market
    
    exit:
        - oco
        - limit
        - market

    action_mapping:
        'action_mapping' item contains "status-action" pairs, which directs the flow of TOs
        
        enter_expire:
            - cancel (default if postpone fails once)
            - postpone
            - market_enter

        exit_expire:
            - market_exit (default if postpone fails once)
            - postpone