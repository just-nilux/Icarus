    ],
    "broker": {
        "quote_currency": "USDT",
         "fee_rate": 0.001
    },
    "risk_management":{
        "max_capital_use_ratio": 0.99
    },
    "strategy": {
        "MACDStrategy": {
            "pairs": ["BTCUSDT","ETHUSDT", "XRPUSDT"],
            "time_scales": ["1d", "4h", "1h"],
            "enter": {
                "type": "market"
            },
            "exit": {
                "type": "market"
            },
            "action_mapping": {
                "enter_expire": "cancel",
                "exit_expire": "market_exit"
            },
            "max_lto": 3
        },
        "RSIStrategy": {
            "pairs": ["BTCUSDT"],
            "time_scales": ["1d"],
            "enter": {
                "type": "market"
            },
            "exit": {
                "type": "market"
            },
            "action_mapping": {
                "enter_expire": "cancel",
                "exit_expire": "market_exit"
            },
            "max_lto": 3
        }
    },
    "analysis": {
        // Support-resistance
        "support_dbscan":{"source":"bullish_fractal_3"},
        "resistance_dbscan":{"source":"bearish_fractal_3"},

        // Market Classification
        "market_class_fractal_aroon": {"validation_threshold": 10, "plot":["distribution"]},
        "market_class_aroonosc": {"validation_threshold": 3, "plot":["distribution"]},
        
        "kaufman_efficiency_ratio": {"timeperiod":20},
        "price_density": {"timeperiod":20},
        "hmm": {},
        "fibonacci": {"source":"high", "radius": 0.005 },

        "fractal_aroon":{},
        "aroonosc":{},
        "stoch":{"fastk_period":5, "slowk_period":5, "slowd_period":3, "slowk_matype":0, "slowd_matype":0},
        "stochf":{"fastk_period":5, "fastd_period":3, "fastd_matype":0},
        
        // Momentum Indicators
        "mfi":{"timeperiod":14},
        "aroon": {"timeperiod":25},

        // Volume indicators
        "ad":{},
        "obv":{}
    },
    "report": {
        "market_class_table_stats": {
            "source": "analyzer",
            "analyzers": [
                "market_class_aroon",
                "market_class_aroonosc",
                "market_class_fractal_aroon"
            ],
            "writers": [
                "markdown_table",
                "database"
            ]
        },
        "market_class_ppc": {
            "source": "database",
            "analyzers": [
                "market_class_aroon",
                "market_class_aroonosc",
                "market_class_fractal_aroon"
            ],
            "writers": [
                "box_plot"
            ]
        },
        "market_class_tabulate_query": {
            "source": "database",
            "queries": [
                [
                    {
                        "$match": {
                            "analyzer": {
                                "$eq": "market_class_aroon"
                            }
                        }
                    },
                    {
                        "$project": {
                            "ppc": "$data.downtrend.PPC Accuracy (%)",
                            "folder_name": "$folder_name"
                        }
                    }
                ]
            ],
            "writers": [
                "heatmap_w_sub_matrices"
            ]
        }
    },
    "time_scales": {
        "1m": 720,  // 12 hours
        "5m": 480,  // 1 day
        "15m": 96,  // 1 day
        "30m": 336, // 1 week
        "1h": 336,  // 2 weeks
