{
    "tag": "test-bot",
    "log":{
        "level": "DEBUG",
        "file": "log/test-ikarus-app.log",
        "clear": true
    },
    "credential_file": "C:\\Users\\bilko\\PycharmProjects\\trade-bot\\test_credentials.json",
    "mongodb":{
        "database": "FixedTarget",
        "host": "localhost",
        "port": 27017,
        "clean": true
    },
    "balances": [
        {
            "asset": "USDT", 
            "free": 10000, 
            "locked": 0
        }
    ],
    "broker": {
        "quote_currency": "USDT",
         "fee_rate": 0.001
    },
    "strategy_allocation":{
        "type": "DiscreteStrategyAllocator",
        "kwargs": {
            "initial_capital": 10000,
            "distribution_config": [
                "FixedLimitTarget_LTC"
            ],
            "max_capital_use":0.9, 
            "stop_capital":null
        }
    },
    "strategy": {
        "FixedLimitTarget_LTC": {
            "strategy": "FixedLimitTarget",
            "pairs": ["LTCUSDT"],
            "time_scales": ["1h"],
            "max_live_trade": 1,
            "kwargs":{
                "target_profit_coeff":1.03,
                "exit_duration":24
            }
        }
    },
    "analysis": {
        "close":{}
    },
    "time_scales": {
        "1h": 3
    },
    "backtest":{
        "start_time": "2022-8-20 00:00:00",
        "end_time": "2022-11-24 00:00:00",
        "online": true,
        "breakpoints": {
            "1668927600000":""
        }
    },
    "report_folder_name": "reports_LTC",
    "report": [],
    "grid_search_reporters": {
        "grid": {
            "<strategy>": [ "FixedLimitTarget_LTC"]
        },
        "reporters": [
            {
                "parameters": {},
                "reporter": "strategy_statistics",
                "query_template": [
                    [
                        {"$match":{"strategy":"<strategy>"}},
                        {
                            "$project": {
                                "strategy":"$strategy",
                                "status": "$status",
                                "cause": "$result.cause",
                                "exit_type": "$result.exit.type",
                                "profit":"$result.profit",
                                "fee":{"$sum":[ "$result.exit.fee", { "$multiply": [ "$result.enter.fee", "$result.enter.price" ] }]},
                                "duration":"$result.live_time",
                                "is_updated":{"$ne": ["$order_stash", []]},
                                "risk_data": {
                                    "enter_price":"$result.enter.price",
                                    "target_price": "$exit.price",
                                    "stop_limit_price": "$exit.stop_limit_price"
                                    },
                                "price_change":{"$divide":[ { "$subtract": [ "$result.exit.price", "$result.enter.price" ] }, "$result.enter.price"]},
                                "percentage_profit":{"$divide":[ 
                                    "$result.profit", 
                                    {"$multiply": [
                                            "$result.enter.price",
                                            { "$sum": [ "$result.enter.quantity", "$result.enter.fee" ] }
                                        ]}]
                                    }
                        }}
                    ]
                ],
                "source": "database",
                "collection": "hist-trades",
                "writers": [
                    "json_file"
                ]
            },
            {
                "parameters": {},
                "reporter": "trade_cause",
                "query_template": [
                    [
                        {"$match":{"strategy":"<strategy>"}},
                        {
                            "$project": {
                                "strategy":"$strategy",
                                "cause": "$result.cause"
                            }
                        }
                    ]
                ],
                "source": "database",
                "collection": "hist-trades",
                "writers": [
                    "pie_plot"
                ]
            },
            {
                "parameters": {},
                "reporter": "trade_perc_profit_duration_distribution",
                "query_template": [
                    [
                        {"$match":{"strategy":"<strategy>"}},
                        {
                            "$project": {
                                "strategy":"$strategy",
                                "duration":"$result.live_time",
                                "percentage_profit":{"$divide":[ 
                                    "$result.profit", 
                                    {"$multiply": [
                                            "$result.enter.price",
                                            { "$sum": [ "$result.enter.quantity", "$result.enter.fee" ] }
                                        ]}]
                                    }
                            }
                        }
                    ]
                ],
                "source": "database",
                "collection": "hist-trades",
                "writers": [
                    "joint_histogram"
                ]
            },
            {
                "parameters": {},
                "reporter": "trade_perc_profit",
                "query_template": [
                    [
                        {"$match":{"strategy":"<strategy>"}},
                        {
                            "$project": {
                                "strategy":"$strategy",
                                "decision_time":"$decision_time",
                                "percentage_profit":{"$divide":[ 
                                    "$result.profit", 
                                    {"$multiply": [
                                            "$result.enter.price",
                                            { "$sum": [ "$result.enter.quantity", "$result.enter.fee" ] }
                                        ]}]
                                    }
                            }
                        }
                    ]
                ],
                "source": "database",
                "collection": "hist-trades",
                "writers": [
                    "histogram"
                ]
            },
            {
                "parameters": {},
                "reporter": "strategy_statistics",
                "query_template": [
                    [
                        {
                            "$project": {
                                "strategy":"All",
                                "status": "$status",
                                "cause": "$result.cause",
                                "profit":"$result.profit",
                                "fee":{"$sum":[ "$result.exit.fee", { "$multiply": [ "$result.enter.fee", "$result.enter.price" ] }]},
                                "duration":"$result.live_time",
                                "is_updated":{"$ne": ["$order_stash", []]},
                                "price_change":{"$divide":[ { "$subtract": [ "$result.exit.price", "$result.enter.price" ] }, "$result.enter.price"]},
                                "percentage_profit":{"$divide":[ 
                                    "$result.profit", 
                                    {"$multiply": [
                                            "$result.enter.price",
                                            { "$sum": [ "$result.enter.quantity", "$result.enter.fee" ] }
                                        ]}]
                                    }
                            }
                        }
                    ]
                ],
                "source": "database",
                "collection": "hist-trades",
                "writers": [
                    
                ]
            },
            {
                "parameters": {},
                "reporter": "balance_statistics",
                "query_template": [
                    [
                        {"$match":{"type":"quote_asset"}},
                        { "$project" : {
                            "ts": "$ts", 
                            "total": "$data.total"
                            } 
                        }
                    ]
                ],
                "source": "database",
                "collection": "observer",
                "writers": [
                    "json_file"
                ]
            },
            {
                "parameters": {},
                "reporter": "strategy_capitals",
                "query_template": [
                    [
                        {"$match":{"type":"strategy_capitals"}},
                        { "$project" : {
                            "ts": "$ts", 
                            "data": "$data"
                            }
                        }
                    ]
                ],
                "source": "database",
                "collection": "observer",
                "writers": [
                    "line_plot"
                ]
            },
            {
                "parameters": {},
                "reporter": "strategy_capital_statistics",
                "query_template": [
                    [
                        {"$match":{"type":"strategy_capitals"}},
                        {
                            "$group": {
                                "_id": null,
                                "first_capitals": { "$first": "$$ROOT.data" },
                                "last_capitals": { "$last": "$$ROOT.data" }
                              }
                        }
                    ]
                ],
                "source": "database",
                "collection": "observer",
                "writers": [
                    "markdown_table"
                ]
            },
            {
                "parameters": {},
                "reporter": "r_multiples",
                "query_template": [
                    [
                        {"$match":{"result.exit.type":"oco", "strategy":"<strategy>"}},
                        { "$project" : {
                            "strategy":"<strategy>",
                            "cause":"$result.cause",
                            "duration":"$result.live_time",
                            "enter_price":"$result.enter.price",
                            "target_price":"$exit.price",
                            "stop_limit_price":"$exit.stop_limit_price"
                            }
                        }
                    ]
                ],
                "source": "database",
                "collection": "hist-trades",
                "writers": [
                    "joint_histogram"
                ]
            }
        ]
    },
    "visualization":{
        "observers":{
            "quote_asset":["free", "total", "in_trade"],
            "quote_asset_leak":["binary"]
        },
        "indicators": {
            "close":"",
            "aroon":{"timeperiod":14}
        },
        "patterns":[]
    }
}