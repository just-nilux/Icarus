{
    "tag": "bot",
    "log":{
        "level": "DEBUG",
        "file": "log/icarus.log",
        "clear": false
    },
    "credential_file": "test_credentials.json",
    "ssh_tunnel":{
        "ssh_address_or_host": ["3.72.67.138", 22],
        "ssh_username": "ubuntu",
        "ssh_pkey": "C:/Users/bilko/lightsailpowershell.pem",
        "remote_bind_address":["127.0.0.1", 27017],
        "local_bind_address":["localhost", 10022]
    },
    "mongodb":{
        "database": "live-test",
        "host": "localhost",
        "port": 27017,
        "clean": false
    },
    "notification":{
        "telegram": {
            "hto": true,
            "lto": true,
            "app": true,
            "error": true,
            "daily": true,
            "stat": true,
            "market": false
        },
        "mail": false
    },
    "broker": {
        "quote_currency": "USDT"
    },
    "strategy_allocation":{
        "type": "DiscreteStrategyAllocator",
        "kwargs": {
            "distribution_config": [
                "FixedLimitTargetAdaptive_XRP_24_24_03", "FixedOCOTargetAdaptive_TRX_24_12_03"
            ],
            "capital_coeff":0.9, 
            "stop_capital":null,
            "capital_limit": 150
        }
    },
    "strategy": {
        "FixedLimitTargetAdaptive_XRP_24_24_03": {
            "strategy": "FixedLimitTargetAdaptive",
            "pairs": ["XRPUSDT"],
            "time_scales": ["1h"],
            "max_live_trade": 1,
            "kwargs":{
                "target_profit_coeff":1.03,
                "exit_duration":24,
                "stop_entry_counter":24
            }
        },
        "FixedOCOTargetAdaptive_TRX_24_12_03": {
            "strategy": "FixedOCOTargetAdaptive",
            "pairs": ["TRXUSDT"],
            "time_scales": ["1h"],
            "max_live_trade": 1,
            "kwargs":{
                "target_profit_coeff":1.03,
                "exit_duration":24,
                "stop_entry_counter":12,
                "max_loss_coeff": 0.05
            }
        }
    },
    "analysis": {
        "close":{},
        "aroon":{}
    },
    "time_scales": {
        "1m": 3,
        "15m": 3,
        "1h": 3
    },
    "report_folder_name": "reports",
    "report": [],
    "grid_search_reporters": {
        "grid": {
            "<strategy>": ["FixedLimitTargetAdaptive_XRP_24_24_03", "FixedOCOTargetAdaptive_TRX_24_12_03"]
        },
        "reporters": [
            {
                "parameters": {},
                "reporter": "strategy_statistics",
                "query_template": [
                    [
                        {"$match":{"strategy":"<strategy>"}},
                        {
                            "$project": {
                                "strategy":"$strategy",
                                "status": "$status",
                                "cause": "$result.cause",
                                "exit_type": "$result.exit.type",
                                "profit":"$result.profit",
                                "fee":{"$sum":[ "$result.exit.fee", { "$multiply": [ "$result.enter.fee", "$result.enter.price" ] }]},
                                "duration":"$result.live_time",
                                "is_updated":{"$ne": ["$order_stash", []]},
                                "risk_data": {
                                    "enter_price":"$result.enter.price",
                                    "target_price": "$exit.price",
                                    "stop_limit_price": "$exit.stop_limit_price"
                                    },
                                "price_change":{"$divide":[ { "$subtract": [ "$result.exit.price", "$result.enter.price" ] }, "$result.enter.price"]},
                                "percentage_profit":{"$divide":[ 
                                    "$result.profit", 
                                    {"$multiply": [
                                            "$result.enter.price",
                                            { "$sum": [ "$result.enter.quantity", "$result.enter.fee" ] }
                                        ]}]
                                    }
                        }}
                    ]
                ],
                "source": "database",
                "collection": "hist-trades",
                "writers": [
                    "json_file"
                ]
            },
            {
                "parameters": {},
                "reporter": "trade_cause",
                "query_template": [
                    [
                        {"$match":{"strategy":"<strategy>"}},
                        {
                            "$project": {
                                "strategy":"$strategy",
                                "cause": "$result.cause"
                            }
                        }
                    ]
                ],
                "source": "database",
                "collection": "hist-trades",
                "writers": [
                    "pie_plot"
                ]
            },
            {
                "parameters": {},
                "reporter": "trade_profit_duration_distribution",
                "query_template": [
                    [
                        {"$match":{"strategy":"<strategy>"}},
                        {
                            "$project": {
                                "strategy":"$strategy",
                                "profit": "$result.profit",
                                "duration":"$result.live_time"
                            }
                        }
                    ]
                ],
                "source": "database",
                "collection": "hist-trades",
                "writers": [
                    "joint_histogram"
                ]
            },
            {
                "parameters": {},
                "reporter": "strategy_statistics",
                "query_template": [
                    [
                        {
                            "$project": {
                                "strategy":"All",
                                "status": "$status",
                                "cause": "$result.cause",
                                "profit":"$result.profit",
                                "fee":{"$sum":[ "$result.exit.fee", { "$multiply": [ "$result.enter.fee", "$result.enter.price" ] }]},
                                "duration":"$result.live_time",
                                "is_updated":{"$ne": ["$order_stash", []]},
                                "price_change":{"$divide":[ { "$subtract": [ "$result.exit.price", "$result.enter.price" ] }, "$result.enter.price"]},
                                "percentage_profit":{"$divide":[ 
                                    "$result.profit", 
                                    {"$multiply": [
                                            "$result.enter.price",
                                            { "$sum": [ "$result.enter.quantity", "$result.enter.fee" ] }
                                        ]}]
                                    }
                            }
                        }
                    ]
                ],
                "source": "database",
                "collection": "hist-trades",
                "writers": [
                    
                ]
            },
            {
                "parameters": {},
                "reporter": "balance_statistics",
                "query_template": [
                    [
                        {"$match":{"type":"quote_asset"}},
                        { "$project" : {
                            "ts": "$ts", 
                            "total": "$data.total"
                            } 
                        }
                    ]
                ],
                "source": "database",
                "collection": "observer",
                "writers": [
                    "json_file"
                ]
            },
            {
                "parameters": {},
                "reporter": "strategy_capitals",
                "query_template": [
                    [
                        {"$match":{"type":"strategy_capitals"}},
                        { "$project" : {
                            "ts": "$ts", 
                            "data": "$data"
                            }
                        }
                    ]
                ],
                "source": "database",
                "collection": "observer",
                "writers": [
                    "line_plot"
                ]
            },
            {
                "parameters": {},
                "reporter": "strategy_capital_statistics",
                "query_template": [
                    [
                        {"$match":{"type":"strategy_capitals"}},
                        {
                            "$group": {
                                "_id": null,
                                "first_capitals": { "$first": "$$ROOT.data" },
                                "last_capitals": { "$last": "$$ROOT.data" }
                              }
                        }
                    ]
                ],
                "source": "database",
                "collection": "observer",
                "writers": [
                    "markdown_table"
                ]
            },
            {
                "parameters": {},
                "reporter": "r_multiples",
                "query_template": [
                    [
                        {"$match":{"result.exit.type":"oco", "strategy":"<strategy>"}},
                        { "$project" : {
                            "strategy":"<strategy>",
                            "cause":"$result.cause",
                            "duration":"$result.live_time",
                            "enter_price":"$result.enter.price",
                            "target_price":"$exit.price",
                            "stop_limit_price":"$exit.stop_limit_price"
                            }
                        }
                    ]
                ],
                "source": "database",
                "collection": "hist-trades",
                "writers": [
                    "joint_histogram"
                ]
            },
            {
                "parameters": {},
                "reporter": "trade_perc_profit",
                "query_template": [
                    [
                        {"$match":{"strategy":"<strategy>"}},
                        {
                            "$project": {
                                "strategy":"$strategy",
                                "decision_time":"$decision_time",
                                "percentage_profit":{"$divide":[ 
                                    "$result.profit", 
                                    {"$multiply": [
                                            "$result.enter.price",
                                            { "$sum": [ "$result.enter.quantity", "$result.enter.fee" ] }
                                        ]}]
                                    }
                            }
                        }
                    ]
                ],
                "source": "database",
                "collection": "hist-trades",
                "writers": [
                    "histogram"
                ]
            }
        ]
    },
    "visualization":{
        "observers":{
            "quote_asset":["free", "total", "in_trade"]
        },
        "indicators": {
            "close":{}
        },
        "patterns":[]
    }
}